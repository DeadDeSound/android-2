<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">


    <ImageView
            android:id="@+id/smslog_photo_imageView"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_contact_picture_holo_light"
            android:background="?android:attr/selectableItemBackground"
            tools:ignore="NewApi"/>
    <View
            android:id="@+id/blue_separator"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@android:color/holo_blue_light"
            android:layout_below="@+id/smslog_photo_imageView"
            tools:ignore="NewApi"/>

    <View
            android:id="@+id/photo_text_bar"
            android:layout_width="match_parent"
            android:layout_height="42dip"
            android:background="#7F000000"
            android:layout_alignParentLeft="true"
            android:layout_alignBottom="@+id/smslog_photo_imageView"
            />

    <ImageView
            android:id="@+id/main_action"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:scaleType="center"
            android:layout_alignRight="@+id/photo_text_bar"
            android:layout_alignBottom="@+id/photo_text_bar"
            android:layout_alignTop="@+id/photo_text_bar"
            android:layout_marginRight="16dip"
            android:src="@drawable/ic_action_user"
            />



    <TextView
            android:id="@+id/smslog_name"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_alignLeft="@+id/photo_text_bar"
            android:layout_toLeftOf="@+id/smslog_photo_imageView"
            android:layout_alignTop="@+id/photo_text_bar"
            android:layout_alignBottom="@+id/photo_text_bar"
            android:layout_marginRight="@dimen/call_log_inner_margin"
            android:layout_marginLeft="@dimen/call_log_indent_margin"
            android:gravity="center_vertical"
            android:textColor="@color/call_log_primary_text_color"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:singleLine="true"
            android:text="Name"
            />

    <FrameLayout
            android:id="@+id/call_and_sms"
            android:layout_width="match_parent"
            android:layout_height="56dip"
            android:layout_marginBottom="2dip"
            android:layout_below="@+id/blue_separator"
            android:gravity="center_vertical"
            android:background="@drawable/dialpad_background"
            >

        <LinearLayout
                android:id="@+id/call_and_sms_main_action"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                tools:ignore="NewApi">

            <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/call_log_indent_margin"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    >

                <TextView
                        android:id="@+id/smslog_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_below="@+id/smslog_name"
                        android:layout_alignParentLeft="true"
                        android:layout_alignBottom="@+id/smslog_photo_imageView"
                        android:textColor="@color/call_log_primary_text_color"
                        android:text="Phone"/>

                <TextView
                        android:id="@+id/smslog_action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/call_log_primary_text_color"
                        android:layout_alignParentLeft="true"
                        android:text="Action"
                        />
            </LinearLayout>

            <View
                    android:id="@+id/call_and_sms_divider"
                    android:layout_width="1px"
                    android:layout_height="32dip"
                    android:background="@drawable/ic_divider_dashed_holo_dark"
                    android:layout_gravity="center_vertical"
                    />

            <ImageView android:id="@+id/call_and_sms_icon"
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:paddingLeft="8dip"
                       android:paddingRight="16dip"
                       android:gravity="center"
                       android:scaleType="centerInside"
                       android:focusable="true"
                       android:background="?android:attr/selectableItemBackground"
                       android:src="@drawable/ic_text_holo_dark"
                    />

        </LinearLayout>


    </FrameLayout>


    <ImageView
            android:id="@+id/smslog_list_item_smsType_imgs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/call_log_indent_margin"
            android:layout_alignLeft="@+id/call_and_sms"
            android:layout_below="@+id/call_and_sms"
            android:src="@drawable/ic_call_voicemail_holo_dark"
            />

    <TextView
            android:id="@+id/smslog_list_item_time_ago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/call_log_secondary_text_color"
            android:text="Il y a 4 jours"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="@dimen/call_log_inner_margin"
            android:layout_alignBottom="@+id/smslog_list_item_smsType_imgs"
            android:layout_toRightOf="@+id/smslog_list_item_smsType_imgs"
            android:layout_below="@+id/call_and_sms"
            />


    <TextView
            android:id="@+id/smslog_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/call_log_indent_margin"
            android:layout_marginRight="@dimen/call_log_inner_margin"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/call_log_secondary_text_color"
            android:layout_below="@+id/smslog_list_item_time_ago"
            android:text="Time"
            />

    <TextView
            android:id="@+id/smslog_requestId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/call_log_inner_margin"
            android:layout_marginLeft="@dimen/call_log_indent_margin"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/call_log_secondary_text_color"
            android:layout_below="@+id/smslog_time"
            android:text="Request iId"
            />

    <TextView
            android:id="@+id/smslog_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/call_log_inner_margin"
            android:layout_marginLeft="@dimen/call_log_indent_margin"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/call_log_secondary_text_color"
            android:layout_below="@+id/smslog_requestId"
            android:text="Message"
            />

    <TextView
            android:id="@+id/smslog_message_param"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/call_log_inner_margin"
            android:layout_marginLeft="@dimen/call_log_indent_margin"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/call_log_secondary_text_color"
            android:layout_below="@+id/smslog_message"
            android:text="Message Params"
            />


</RelativeLayout>