<!--             android:label="@string/app_name" /> -->
        <activity
            android:name=".CountDownTimerActivity"
            android:label="@string/app_name" >
            <meta-data
                android:name="android.app.searchable.default_searchable"
                android:value=".ui.search.SearchableVeloActivity" />
        </activity>
        <activity android:name=".ui.about.AboutActivity" android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="eu.ttbox.velib.ui.about.ACTION_VIEW_ABOUT" />
                <action android:name="eu.ttbox.velib.ui.about.ACTION_VIEW_LICENCE" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.about.VelibAccountActivity" android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity android:exported="false"
            android:name=".ui.search.SearchableVeloActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
                <action android:name="eu.ttbox.velib.ui.search.ACTION_VIEW_FAVORITE" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:exported="false"
            android:name=".ui.search.SearchableGeocoderActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/geocoder_searchable" />
        </activity>
        <activity android:exported="false"
            android:name=".ui.preference.VelibPreferenceActivity"
            android:label="@string/app_name" />
        
        <activity android:exported="true"  android:name=".VelibMapActivity"
            uiOptions="splitActionBarWhenNarrow"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@style/MapActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" /> 
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

<!--             <meta-data -->
<!--                 android:name="android.app.default_searchable" -->
<!--                 android:value=".ui.search.SearchableGeocoderActivity" /> -->
        </activity>

        <!-- Provides search suggestions for words and their definitions. -->
        <provider
            android:name=".VeloContentProvider"
            android:authorities="eu.ttbox.velib.VeloContentProvider"
            android:readPermission="eu.ttbox.velib.provider.READ_MY_DATA"
            android:writePermission="eu.ttbox.velib.provider.WRITE_MY_DATA" >
            <path-permission
                android:pathPrefix="/search_suggest_query"
                android:readPermission="android.permission.GLOBAL_SEARCH" />
        </provider>
        <provider
            android:name=".search.StationRecentSearchRecentSuggestionsProvider"
            android:authorities="eu.ttbox.velib.search.StationRecentSearchRecentSuggestionsProvider"
            android:exported="false" />
        <provider
            android:name=".GeocoderContentProvider"
            android:authorities="eu.ttbox.velib.GeocoderContentProvider"
            android:exported="false" />
        <provider
            android:name=".OSMPointsContentProvider"
            android:authorities="org.osm.data"
            android:exported="false" />

