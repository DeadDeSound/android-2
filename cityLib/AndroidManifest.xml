<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eu.ttbox.velib"
    android:installLocation="auto"
    android:versionCode="20"
    android:versionName="0.1.4" >

    <!-- android:minSdkVersion="9" -->
    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- Api Messaging -->
    <permission
        android:name="eu.ttbox.velib.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="eu.ttbox.velib.permission.C2D_MESSAGE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <!-- android:backupAgent=".service.backup.MyBackupAgent" -->
    <application
        android:name="AndroLibApplication"
        android:debuggable="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/panneau_obligation_cycles"
        android:label="@string/app_name"
        android:theme="@style/MyTheme" >

        <!-- Cloudmade Key http://developers.cloudmade.com/projects/web-maps-api/examples -->
        <meta-data
            android:name="CLOUDMADE_KEY"
            android:value="bf761f5e98524bf88ac465bce90002b6" />
         
        <!-- Bing Key https://www.bingmapsportal.com -->
        <meta-data
            android:name="BING_KEY"
            android:value="AuBpNxDvcuq-mDB2oX-eT7NaiaRFBzsuR4R6DHqi30at_y2L6ACFt_MfnCR8qs7K" />

        <!-- <uses-library android:name="com.google.android.maps" android:required="true"/> -->


        <!-- Service -->
        <service android:exported="false"
            android:name=".service.VelibService"
            android:enabled="true" />
        <service android:exported="false"
            android:name=".service.osm.OsmMapTilesDownloadService"
            android:enabled="true" >
            <intent-filter>
                <action android:name="eu.ttbox.velib.ACTION_OSM_MAPTILES_DOWNLOAD" />
            </intent-filter>
        </service>
        <service
            android:name=".countdown.CountdownTimerService"
            android:exported="false"
            android:label="@string/countdown_service_label" >
            <intent-filter>
                <action android:name="ADD_TIMER" />
                <action android:name="REMOVE_TIMER" />
                <action android:name="STOP_TIMER" />
                <action android:name="START_TIMER" />
                <action android:name="STOP_ALARM" />
                <action android:name="GET_TIMERS" />
            </intent-filter>
        </service>

        <!-- Activity -->
        <activity
            android:name=".ui.help.HelpMainActivity"
            android:label="@string/app_name" >
            <meta-data
                android:name="android.app.searchable.default_searchable"
                android:value=".ui.search.SearchableVeloActivity" />
        </activity>
