<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="eu.ttbox.smstraker" android:versionCode="1"
	android:versionName="1.0">
	<uses-sdk android:minSdkVersion="11" />

	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />

	<uses-permission android:name="android.permission.INTERNET" />

	<uses-permission android:name="android.permission.SEND_SMS" />

	<uses-permission android:name="android.permission.RECEIVE_SMS" />
	<uses-permission android:name="android.permission.READ_SMS" />


	<application android:icon="@drawable/icon" android:label="@string/app_name">
		<activity android:name=".SmsTrakerActivity" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".ShowMapActivity"></activity>
		<activity android:name=".GeoTrakerActivity"></activity>
 		<activity android:name=".ui.prefs.TrakingPrefActivity"></activity> 
		<activity android:name=".ui.ping.GeoPingActivity"></activity> 
		<activity android:name=".ui.person.AddPersonActivity"></activity> 
				
		<receiver android:name=".service.receiver.SMSReceiver" >
			<intent-filter android:priority="100">
				<action android:name="android.provider.Telephony.SMS_RECEIVED" />
			</intent-filter>
		</receiver>
		

		<service android:name=".service.GeoTrackingService" >
<!-- 			 <intent-filter>  -->
<!-- 		        <action android:name=".GeoTrackingService.ACTION" />  -->
<!-- 		    </intent-filter>  --> 
		</service> 
		
		<service android:name=".service.sender.GeoPingSmsSenderService"></service>
		
		<provider
            android:name=".domain.PersonProvider"
            android:authorities="eu.ttbox.smstraker.PersonProvider"
            android:readPermission="eu.ttbox.smstraker.PERSON_READ"
            android:writePermission="eu.ttbox.smstraker.PERSON_WRITE" />
		 <provider
            android:name=".domain.GeoTrackerProvider"
            android:authorities="eu.ttbox.smstraker.GeoTrackerProvider"
            android:readPermission="eu.ttbox.smstraker.GEO_TRACK_READ"
            android:writePermission="eu.ttbox.smstraker.GEO_TRACK_WRITE" />

		<uses-library android:required="true" android:name="com.google.android.maps" />
		 		 		
	</application>
</manifest>